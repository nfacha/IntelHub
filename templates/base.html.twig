<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<div class="flex">
    {% if app.environment != 'prod' %}
        <div class="fixed top-0 h-6 bg-red-400 w-screen z-10 mb-10 text-center text-white font-bold">
        <span>
            You are currently running on {{ app.environment }} environment! - NOT FOR PRODUCTION USE
        </span>
        </div>
    {% endif %}
    <div class="bg-blue-500 h-screen p-5 pt-14 w-2/12 relative">
        {#        <i class="gg-arrow-left-r bg-white text-black text-3xl rounded-full absolute -right-3 top-9 border border-black cursor-pointer"></i> #}
        <div class="inline-flex items-center content-center w-full">
            <i class="gg-pin bg-amber-300 text-4xl rounded cursor-pointer block float-left mr-3 ml-3"></i>
            <h1 class="text-white origin-left font-medium text-2xl ml-8">IntelHub</h1>
        </div>
        <ul class="pt-10">
            <li class="text-white text-xl font-medium mt-5 flex text-center items-center content-center w-full">
                <i class="gg-home mr-3"></i>
                <a href="">Home</a>
            </li>
            {% if not app.user %}
                <li class="text-white text-xl font-medium mt-5 flex text-center items-center content-center w-full">
                    <i class="gg-lock mr-3"></i>
                    <a href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="text-white text-xl font-medium mt-5 flex text-center items-center content-center w-full">
                    <i class="gg-user-add mr-3"></i>
                    <a href="{{ path('app_register') }}">Register</a>
                </li>
            {% else %}
                <li class="text-white text-xl font-medium mt-5 flex text-center items-center content-center w-full">
                    <i class="gg-terminal mr-3"></i>
                    <a href="">Settings</a>
                </li>


                <li class="text-white text-xl font-medium mt-5 flex text-center items-center content-center w-full">
                    <i class="gg-user-remove mr-3"></i>
                    <a href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% endif %}


        </ul>
    </div>
    {% block body %}{% endblock %}

</div>
</body>
</html>
