{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center h-screen">
        <div class="w-full max-w-xs">
            <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="inputUsername">
                        Username
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                           name="username" id="inputUsername" type="text" required autofocus="Username">
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="inputPassword">
                        Password
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                           name="password" id="inputPassword" type="password" placeholder="******************" required>
                </div>
                <div class="flex items-center justify-between">
                    <button class="bg-purple-500 hover:bg-purple-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                            type="submit">
                        Sign In
                    </button>
                    {#                    <a class="inline-block align-baseline font-bold text-sm text-purple-500 hover:text-purple-800" href="#"> #}
                    {#                        Forgot Password? #}
                    {#                    </a> #}
                    <a class="inline-block align-baseline font-bold text-sm text-purple-500 hover:text-purple-800"
                       href="#">
                        Sign Up
                    </a>
                </div>
                {% if error %}
                    <div class="flex items-center justify-between">

                        <div class="text-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>


{% endblock %}
