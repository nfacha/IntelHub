{% extends 'clean.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}

    <div class="container">
        <div class="w-full min-h-screen p-5 md:p-20 flex items-center justify-center">
            <div class="w-96 intro-y">
                {{ form_start(registrationForm) }}
                <div class="text-white dark:text-slate-300 text-2xl font-medium text-center mt-14">Register a New Account</div>
                <div class="box px-5 py-8 mt-10 max-w-[450px] relative before:content-[''] before:z-[-1] before:w-[95%] before:h-full before:bg-slate-200 before:border before:border-slate-200 before:-mt-5 before:absolute before:rounded-lg before:mx-auto before:inset-x-0 before:dark:bg-darkmode-600/70 before:dark:border-darkmode-500/60">
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control py-3 px-4 block'}}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control py-3 px-4 block mt-4'}}) }}
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control py-3 px-4 block mt-4'}}) }}
                    <div class="flex items-center text-slate-500 mt-4 text-xs sm:text-sm">
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input border mr-2'}}) }}
                        <label class="cursor-pointer select-none"
                               for="remember-me">I agree to IntelHub</label>
                        <a class="text-primary dark:text-slate-200 ml-1"
                           href="">Terms of Service</a>.
                    </div>
                    <div class="mt-5 xl:mt-8 text-center xl:text-left">
                        <button class="btn btn-primary w-full xl:mr-3"
                                type="submit">Register
                        </button>
                        <a class="btn btn-outline-secondary w-full mt-3"
                           href="{{ path('app_login') }}">Login</a>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="flex items-center justify-between">

                        <div class="alert text-red-600"
                             role="alert">{{ flash_error }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
