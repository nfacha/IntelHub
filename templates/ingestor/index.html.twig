{% extends 'base.html.twig' %}

{% block title %}Ingestor index{% endblock %}

{% block body %}
    <h1 class="font-bold text-2xl">Ingestor Settings</h1>
    <p>Ingestors are the datasources that provide information to IntelHub</p>
    <table class="table-auto w-full">
        <thead>
        <tr class="bg-gray-300">
            <th class="px-4 py-2 w-1/4">Name</th>
            <th class="px-4 py-2 w-1/4">Type</th>
            <th class="px-4 py-2 w-1/4">Source Type</th>
            <th class="px-4 py-2 w-1/4">Status</th>
            <th class="px-4 py-2 w-1/4">Edit</th>
        </tr>
        </thead>
        <tbody>
        {% for ingestor in ingestors %}
            <tr class="bg-gray-100 text-center">
                <td class="border px-4 py-2 w-1/4">{{ ingestor.name }}</td>
                <td class="border px-4 py-2 w-1/4">{{ ingestor.typeLabel }}</td>
                <td class="border px-4 py-2 w-1/4">{{ ingestor.sourceTypeLabel }}</td>
                <td class="border px-4 py-2 w-1/4">
                    {% if ingestor.active == 1 %}
                        <span class="rounded-full p-2 bg-green-500 text-white">Enabled</span>
                    {% else %}
                        <span class="rounded-full p-2 bg-red-500 text-white">Disabled</span>
                    {% endif %}
                </td>
                <td class="border px-4 py-2 w-1/4">
                    <a href="{{ path('app_ingestor_edit', {'id': ingestor.id}) }}"
                       class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_ingestor_new') }}" class="text-white p-2 bg-green-500 rounded">Create new</a>

{% endblock %}
