{% extends 'base.html.twig' %}

{% block title %}Airport{% endblock %}

{% block body %}
    <h1>Airport</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ airport.id }}</td>
        </tr>
        <tr>
            <th>Ident</th>
            <td>{{ airport.ident }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ airport.type }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ airport.name }}</td>
        </tr>
        <tr>
            <th>Latitude</th>
            <td>{{ airport.latitude }}</td>
        </tr>
        <tr>
            <th>Longitude</th>
            <td>{{ airport.longitude }}</td>
        </tr>
        <tr>
            <th>Elevation_ft</th>
            <td>{{ airport.elevationFt }}</td>
        </tr>
        <tr>
            <th>Scheduled_service</th>
            <td>{{ airport.scheduledService ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Icao</th>
            <td>{{ airport.icao }}</td>
        </tr>
        <tr>
            <th>Iata</th>
            <td>{{ airport.iata }}</td>
        </tr>
        <tr>
            <th>External_id</th>
            <td>{{ airport.externalId }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_airport_index') }}">back to list</a>

    <a href="{{ path('app_airport_edit', {'id': airport.id}) }}">edit</a>

    {{ include('airport/_delete_form.html.twig') }}
{% endblock %}
