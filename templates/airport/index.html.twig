{% extends 'base.html.twig' %}

{% block title %}Airport index{% endblock %}

{% block body %}
    <h2 class="intro-y text-lg font-medium mt-10">
        Airport </h2>
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-nowrap items-center mt-2">
        <div class="w-full sm:w-auto mt-3 sm:mt-0 sm:ml-auto md:ml-0">
            <div class="w-56 relative text-slate-500">
                <form action="{{ path('app_airport_index') }}"
                      method="get">
                    <input type="text"
                           name="q"
                           class="form-control w-56 box pr-10"
                           placeholder="Search"
                           value="{{ query }}">
                </form>
                <i class="w-4 h-4 absolute my-auto inset-y-0 mr-3 right-0"
                   data-lucide="search"></i>
            </div>
        </div>
    </div>
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report -mt-2">
            <thead>
            <tr>
                <th class="whitespace-nowrap">ICAO</th>
                <th class="whitespace-nowrap">IATA</th>
                <th class="text-center whitespace-nowrap">NAME</th>
                <th class="text-center whitespace-nowrap">TYPE</th>
                <th class="text-center whitespace-nowrap">ACTIONS</th>
            </tr>
            </thead>
            <tbody>
            {% for airport in airports %}
                <tr class="intro-x">
                    <td class="text-center">{{ airport.icao }}</td>
                    <td class="text-center">{{ airport.iata }}</td>
                    <td class="text-center">{{ airport.name }}</td>
                    <td class="text-center">{{ airport.type }}</td>
                    <td class="table-report__action w-56">

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ pagerfanta(airports) }}
{% endblock %}
